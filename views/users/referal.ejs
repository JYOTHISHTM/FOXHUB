<%- include('../layouts/header.ejs') %>
<%- include('../layouts/navbar.ejs') %>

<link rel="stylesheet" href="/css/sidebar.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastify-js/1.11.0/toastify.min.css">

<div class="hero-wrap hero-bread" style="background-image: url('/assets/images/bg_6.jpg'); padding-top: 100px;">
  <div class="container">
    <div class="row no-gutters slider-text align-items-center justify-content-center">
      <div class="col-md-9 ftco-animate text-center">
        <p class="breadcrumbs"><span class="mr-2"><a href="/home">Home</a></span> <span>Address</span></p>
        <h1 class="mb-0 bread">My ADDRESS</h1>
      </div>
    </div>
  </div>
</div>
<%- include('../profileLayouts/sideBar.ejs') %>

<div class="container my-5 d-flex justify-content-center align-items-center" style="min-height: 30vh;">
  <div class="row w-100">
    <div class="col-md-3"></div>

    <div class="container my-5">
      <div class="row justify-content-center">
        <div class="col-md-6" style="margin-top: -35%;">
          <div class="card">
            <div class="card-body">
              <h3 class="card-title text-center mb-4">Your Referral Code</h3>
              <% if (userData) { %>
                <div class="form-group">
                  <label for="referralCode">Your Referral Code:</label>
                  <input type="text" class="form-control text-center" id="referralCode" value="<%= userData.referral_code %>" readonly>
                </div>
                <div class="text-center">
                  <button class="btn btn-primary" onclick="copyReferralCode()">Copy Code</button>
                </div>
              <% } else { %>
                <p>No user data available.</p>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="toast" id="referralToast" data-delay="3000">
      <div class="toast-body">
        Referral code copied!
      </div>
    </div>

    <div class="col-md-3"></div>
  </div>
</div>

<%- include('../layouts/footer.ejs') %>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastify-js/1.11.0/toastify.min.js"></script>
<script>
  function copyReferralCode() {
    var copyText = document.getElementById("referralCode");
    copyText.select();
    copyText.setSelectionRange(0, 99999); 
    document.execCommand("copy");

    Toastify({
      text: "Referral code copied!",
      duration: 3000,
      close: true,
      gravity: "top", 
      position: 'right', 
      backgroundColor: "linear-gradient(#008000)"
    }).showToast();
  }
</script>
